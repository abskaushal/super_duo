<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green09"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/widget_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dimen_46"
            android:paddingEnd="@dimen/dimen_5"
            android:paddingLeft="@dimen/dimen_5"
            android:paddingRight="@dimen/dimen_5"
            android:paddingStart="@dimen/dimen_5">

            <ImageView
                android:id="@+id/widget_image"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/widget_image"
                android:layout_toRightOf="@+id/widget_image"
                android:text="@string/football_score"
                android:layout_marginTop="@dimen/dimen_5"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/widget_image"
                android:layout_toRightOf="@+id/widget_image"
                android:text="@string/today"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/dimen_5"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </RelativeLayout>


        <ListView
            android:id="@+id/widget_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_3"/>

    </LinearLayout>



</FrameLayout>